<% @posts.each do |post| %>
    <h2><strong><%= post.title %></strong><small> / <%= post.category.name %></small></h2>
    <small><%= post.created_at.to_formatted_s(:long) %> by <strong><%= post.user.email %></strong></small>
    <hr>
    <div class="ocultar">
    	  <p><%= post.content %></p>
    </div>
 
    <%= link_to "-More-", posts_show_path(post.url), class: 'btn btn-success' %>
<% end %>
